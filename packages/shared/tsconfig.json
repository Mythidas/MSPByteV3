{
  "extends": "@workspace/ts-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@workspace/shared/types/*": ["./src/types/*"],
      "@workspace/shared/lib/*": ["./src/lib/*"],
      "@workspace/shared/config/*": ["./src/config/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
